@page
@model IndexModel
@{
    Layout = "";
}
<div class="alert-list">
</div>
<form asp-page="index">
    <div class="main">
        <div class="content">
            <p class="login-title">FPT University Academic Portal</p>
            <p class="login-description">Log in using your account on:</p>
            <div class="login-form">
                @*Username input*@
                <label for="Username"
                       class="relative px-3 py-2 block rounded-md border border-gray-300 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600">
                    <input type="text"
                           name="username"
                           id="Username"
                           class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
                           placeholder="Username" />

                    <span class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs">
                        Username
                    </span>
                </label>

                @*Password input*@
                <label for="Password"
                       class="relative mt-3 px-3 py-2 block rounded-md border border-gray-300 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600">
                    <input type="password"
                           name="password"
                           id="Password"
                           class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0"
                           placeholder="Password" />

                    <span class="pointer-events-none absolute start-2.5 top-0 -translate-y-1/2 bg-white p-0.5 text-xs text-gray-700 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-sm peer-focus:top-0 peer-focus:text-xs">
                        Password
                    </span>
                </label>

                @*Submit button*@
                <button class="group mt-3 w-full relative inline-block overflow-hidden border border-indigo-600 px-8 py-3 focus:outline-none focus:ring"
                        type="submit">
                    <span class="absolute inset-y-0 right-0 w-[2px] bg-indigo-600 transition-all group-hover:w-full group-active:bg-indigo-500"></span>

                    <span class="relative justify-center flex gap-2 items-center text-sm font-medium text-indigo-600 transition-colors group-hover:text-white">
                        LOGIN
                    </span>
                </button>

                <div class="my-4 flex items-center before:mt-0.5 before:flex-1 before:border-t before:border-neutral-600 after:mt-0.5 after:flex-1 after:border-t after:border-neutral-600">
                    <p class="mx-4 mb-0 text-center font-semibold dark:text-neutral-500">
                        OR
                    </p>
                </div>

                @*Google login*@
                <a class="group w-full relative inline-block overflow-hidden border border-indigo-600 px-8 py-3 focus:outline-none focus:ring"
                   href="/download">
                    <span class="absolute inset-y-0 right-0 w-[2px] bg-indigo-600 transition-all group-hover:w-full group-active:bg-indigo-500"></span>

                    <span class="relative justify-center flex gap-2 items-center text-sm font-medium text-indigo-600 transition-colors group-hover:text-white">
                        <img src="https://www.google.com/favicon.ico"
                             height="20px"
                             width="20px" />
                        FPT.EDU.VN
                    </span>
                </a>
            </div>
        </div>
    </div>
</form>